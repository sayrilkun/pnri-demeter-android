#: import webbrowser webbrowser
<UploadDocScreen>
    name: 'uploaddoc'

    MDScreen:
        md_bg_color:app.dark2
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            md_bg_color:app.dark2
            title: "Upload Data"
            type_height: "small"
            left_action_items: [["arrow-left", lambda x : app.swtchScreen('collections')]]
            right_action_items: [["eraser", lambda x : root.eraser()],["file-upload", lambda x : app.upload()]]
        MDTabs:
            id: tabs
            background_color: rgba(0,0,0,0)
            tab_hint_x: True
            Tab:
                title: "Passport Data"
                
                MDTextField:
                    id: input_1
                    hint_text: "Name (Avoid using special characters like ',./\')"
                    pos_hint: {"center_x": 0.5, "center_y": 0.95}
                    size_hint: .75,0.08
                    color_mode: 'custom'
                    mode: "rectangle"
                    required: True
                    helper_text_mode: "on_error"
                    # helper_text: ""
                    # line_color_focus: 1, 1, 1, 1
                MDTextField:
                    id: input_2
                    hint_text: "Date Acquired"
                    pos_hint: {"center_x": 0.5, "center_y": 0.85}
                    size_hint: .75,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDTextField:
                    id: input_3
                    hint_text: "Accession Origin"
                    pos_hint: {"center_x": 0.5, "center_y": 0.75}
                    size_hint: .75,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDTextField:
                    id: input_4
                    hint_text: "Project"
                    pos_hint: {"center_x": 0.5, "center_y": 0.65}
                    size_hint: .75,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDTextField:
                    id: input_5
                    hint_text: "Project Leader"
                    pos_hint: {"center_x": 0.5, "center_y": 0.55}
                    size_hint: .75,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDTextField:
                    id: input_6
                    hint_text: "Other Details"
                    pos_hint: {"center_x": 0.5, "center_y": 0.39}
                    size_hint: .75,0.20
                    mode: "rectangle"
                    multiline: True
                    color_mode: 'accent'

                MDTextField:
                    id: input_7
                    hint_text: "Status"
                    pos_hint: {"center_x": 0.5, "center_y": 0.23}
                    size_hint: .75,0.08
                    mode: "rectangle"
                    color_mode: 'accent'


            Tab:
                title: "Morphology"
                ScrollView:
                    MDGridLayout:
                        id: box
                        adaptive_height: True
                        cols: 1    

                MDRaisedButton:
                    text: 'add sample'
                    pos_hint: {"center_x": 0.5, "center_y": 0.23}
                    on_press:
                        app.show_dialog()

            Tab:
                title: "Additional Files"
                MDTextField:
                    id: input_13
                    hint_text: "Google Drive Link"
                    pos_hint: {"center_x": 0.37, "center_y": 0.95}
                    size_hint: .50,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDRaisedButton:
                    text: "Open Drive"
                    pos_hint: {"center_x": 0.8, "center_y": 0.941}
                    size_hint: .22,0.065
                    on_press:
                        webbrowser.open('https://drive.google.com')

                MDTextField:
                    id: input_11
                    hint_text: "Upload Image"
                    pos_hint: {"center_x": 0.37, "center_y": 0.85}
                    size_hint: .50,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDRaisedButton:
                    text: "Browse"
                    pos_hint: {"center_x": 0.8, "center_y": 0.841}
                    size_hint: .22,0.065
                    on_press: 
                        root.manager.current = 'fileman'
                        root.manager.transition.direction = "left"

                MDTextField:
                    id: input_12
                    hint_text: "Photograpped by:"
                    pos_hint: {"center_x": 0.37, "center_y": 0.75}
                    size_hint: .50,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDTextField:
                    id: input_14
                    hint_text: "Custom watermark"
                    pos_hint: {"center_x": 0.37, "center_y": 0.65}
                    size_hint: .50,0.08
                    mode: "rectangle"
                    color_mode: 'accent'

                MDLabel:
                    halign: 'center'
                    text: 'To use watermark, please download the font below and keep it in Download Folder for future use.'
                    pos_hint: {"center_y": 0.35}
                
                MDRaisedButton:
                    text: 'Download Font'
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}
                    on_press: app.downloadFont()



















