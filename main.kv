<OneLineIcon>:     
    text: root.text
    on_press: print(self.text)
    IconLeftWidget:
        icon: 'flower-poppy'
        # on_press:
        #     print("dsfdfsdasdfasdgasgasfasfsadgadsfasd")
    IconRightWidget:
        icon: 'trash-can'
        on_press:
            app.remove_item(root,root.text)

<ThreeLineIcon>:
    text: root.text
    on_press: app.passValue(self.text)         
    IconLeftWidget:
        icon: 'assets/images/hoya2.png'
        # on_press:
        #     print("dsfdfsdasdfasdgasgasfasfsadgadsfasd")
    IconRightWidget:
        icon: 'dots-vertical'
        on_press:
            app.show_simple_dialog()
            

